<body>

    <h2>Calculadora de Soma</h2>

    <div class="caixa">
        <label>Primeiro número:</label><br>
        <input type="number" id="n1"><br>

        <label>Segundo número:</label><br>
        <input type="number" id="n2"><br>

        <button onclick="somar()">Somar</button>

        <p id="resultado"></p>
    </div>

<script>
    function somar(){
        let num1 = document.getElementById("n1").value
        let num2 = document.getElementById("n2").value

        if(num1 === "" || num2 === ""){
            document.getElementById("resultado").textContent = "Preencha os dois números!"
            return
        }

        let soma = parseFloat(num1) + parseFloat(num2)
        document.getElementById("resultado").textContent = "Resultado: " + soma
    }
</script>

