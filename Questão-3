<body>

<h2>Mudar Cor de Fundo</h2>
<button onclick="mudarCor()">Mudar Cor</button>

<script>
    function mudarCor(){
        const cores = ['red', 'blue', 'green', 'orange', 'purple', 'yellow', 'pink'];
        let indice = Math.floor(Math.random() * cores.length);
        document.body.style.backgroundColor = cores[indice];
    }
</script>

</body>
</html>
