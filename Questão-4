<body>

<h2>Calculadora de IMC</h2>

<div class="caixa">
    <label>Peso (kg):</label><br>
    <input type="number" id="peso"><br>

    <label>Altura (m):</label><br>
    <input type="number" id="altura" step="0.01"><br>

    <button onclick="calcularIMC()">Calcular IMC</button>

    <p id="resultado"></p>
</div>

<script>
    function calcularIMC(){
        let peso = document.getElementById("peso").value
        let altura = document.getElementById("altura").value
        let resultado = document.getElementById("resultado")

        if(peso === "" || altura === ""){
            resultado.textContent = "Preencha peso e altura!"
            return
        }

        let imc = peso / (altura * altura)
        resultado.textContent = "Seu IMC Ã©: " + imc.toFixed(2)

        if(imc < 18.5){
            resultado.textContent += " (Abaixo do peso)"
        } else if(imc < 25){
            resultado.textContent += " (Peso normal)"
        } else if(imc < 30){
            resultado.textContent += " (Sobrepeso)"
        } else {
            resultado.textContent += " (Obesidade)"
        }
    }
</script>

